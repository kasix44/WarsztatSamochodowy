@model WorkshopManager.Models.Customer

@{
    ViewData["Title"] = "Szczegóły klienta";
}

<h1>Szczegóły klienta</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Imię</dt>
        <dd class="col-sm-10">@Model.FirstName</dd>
        <dt class="col-sm-2">Nazwisko</dt>
        <dd class="col-sm-10">@Model.LastName</dd>
        <dt class="col-sm-2">Telefon</dt>
        <dd class="col-sm-10">@Model.PhoneNumber</dd>
        <dt class="col-sm-2">E-mail</dt>
        <dd class="col-sm-10">@Model.Email</dd>
        <dt class="col-sm-2">Adres</dt>
        <dd class="col-sm-10">@Model.Address</dd>
    </dl>
</div>

@if (Model.Vehicles != null && Model.Vehicles.Any())
{
    <h4>Pojazdy klienta</h4>
    <table class="table">
        <thead>
        <tr>
            <th>Marka</th>
            <th>Model</th>
            <th>Rejestracja</th>
            <th>VIN</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var vehicle in Model.Vehicles)
        {
            <tr>
                <td>@vehicle.Brand</td>
                <td>@vehicle.Model</td>
                <td>@vehicle.LicensePlate</td>
                <td>@vehicle.VIN</td>
            </tr>
        }
        </tbody>
    </table>
}
else
{
    <p><em>Brak pojazdów przypisanych do klienta.</em></p>
}

<div>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edytuj</a>
    <a asp-action="Index" class="btn btn-secondary">Powrót</a>
</div>
