@model WorkshopManager.Models.ServiceOrderComment

@{
    ViewData["Title"] = "Edytuj komentarz";
}

<h2>Edytuj komentarz</h2>

<form asp-action="EditComment" method="post">
    <input type="hidden" name="id" value="@Model.Id" />
    <div class="form-group">
        <label for="text">Treść komentarza</label>
        <textarea name="text" class="form-control" rows="4" required>@Model.Content</textarea>
    </div>
    <button type="submit" class="btn btn-primary mt-2">Zapisz zmiany</button>
    <a asp-action="Details" asp-route-id="@Model.ServiceOrderId" class="btn btn-secondary mt-2">Anuluj</a>
</form>