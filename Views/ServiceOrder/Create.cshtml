@model WorkshopManager.Models.ServiceOrder

@{
    ViewData["Title"] = "Utwórz zlecenie";
}

<h1>Utwórz zlecenie serwisowe</h1>

<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="StartDate" class="control-label">Data rozpoczęcia</label>
                <input asp-for="StartDate" class="form-control" />
                <span asp-validation-for="StartDate" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="EndDate" class="control-label">Data zakończenia</label>
                <input asp-for="EndDate" class="form-control" />
                <span asp-validation-for="EndDate" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Status" class="control-label">Status</label>
                <select asp-for="Status" class="form-control"
                        asp-items="Html.GetEnumSelectList<WorkshopManager.Models.OrderStatus>()">
                    <option value="">-- wybierz status --</option>
                </select>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="VehicleId" class="control-label">Pojazd</label>
                <select asp-for="VehicleId" class="form-control" asp-items="ViewBag.VehicleId">
                    <option value="">-- wybierz pojazd --</option>
                </select>
                <span asp-validation-for="VehicleId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="AssignedMechanicId" class="control-label">Przypisany mechanik</label>
                <select asp-for="AssignedMechanicId" class="form-control" asp-items="ViewBag.AssignedMechanicId">
                    <option value="">-- wybierz mechanika --</option>
                </select>
                <span asp-validation-for="AssignedMechanicId" class="text-danger"></span>
            </div>

            <div class="form-group mt-3">
                <input type="submit" value="Zapisz" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary ms-2">Anuluj</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
