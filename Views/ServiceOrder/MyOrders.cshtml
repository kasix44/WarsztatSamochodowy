@model IEnumerable<WorkshopManager.DTOs.ServiceOrderDto>

@{
    ViewData["Title"] = "Moje zlecenia";
}

<h1>Moje zlecenia</h1>

<table class="table">
    <thead>
    <tr>
        <th>Data rozpoczęcia</th>
        <th>Status</th>
        <th>Pojazd</th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.StartDate.ToShortDateString()</td>
            <td>@item.Status</td>
            <td>@item.Vehicle?.Brand @item.Vehicle?.Model (@item.Vehicle?.LicensePlate)</td>
            <td>
                <a asp-action="MechanicDetails" asp-route-id="@item.Id" class="btn btn-info btn-sm">Szczegóły</a>
            </td>
        </tr>
    }
    </tbody>
</table>
