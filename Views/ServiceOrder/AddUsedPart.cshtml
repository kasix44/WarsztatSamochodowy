@model WorkshopManager.DTOs.UsedPartDto

@{
    ViewData["Title"] = "Dodaj część";
}

<h2>Dodaj część do zlecenia</h2>

<form asp-action="AddUsedPart" method="post">
    <input type="hidden" asp-for="ServiceOrderId" />

    <div class="form-group">
        <label asp-for="PartId" class="control-label">Część</label>
        <select asp-for="PartId" class="form-control" asp-items="ViewBag.Parts">
            <option value="">-- wybierz część --</option>
        </select>
        <span asp-validation-for="PartId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Quantity" class="control-label">Ilość</label>
        <input asp-for="Quantity" class="form-control" />
        <span asp-validation-for="Quantity" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Dodaj</button>
    <a asp-action="Details" asp-route-id="@Model.ServiceOrderId" class="btn btn-secondary">Anuluj</a>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
