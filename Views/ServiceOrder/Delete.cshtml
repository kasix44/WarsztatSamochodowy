@model WorkshopManager.DTOs.ServiceOrderDto

@{
    ViewData["Title"] = "Usuń zlecenie";
}

<h1>Usuń zlecenie</h1>

<h3>Czy na pewno chcesz usunąć to zlecenie?</h3>
<div>
    <h4>Zlecenie serwisowe</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.StartDate)
        </dt>
        <dd class="col-sm-10">
            @Model.StartDate.ToShortDateString()
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.EndDate)
        </dt>
        <dd class="col-sm-10">
            @Model.EndDate?.ToShortDateString()
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Status)
        </dt>
        <dd class="col-sm-10">
            @Model.Status
        </dd>
        <dt class="col-sm-2">
            Pojazd
        </dt>
        <dd class="col-sm-10">
            @Model.Vehicle?.Brand @Model.Vehicle?.Model (@Model.Vehicle?.LicensePlate)
        </dd>
        <dt class="col-sm-2">
            Mechanik
        </dt>
        <dd class="col-sm-10">
            @Model.AssignedMechanicUserName
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Usuń</button>
        <a asp-action="Index" class="btn btn-secondary">Powrót</a>
    </form>
</div>
