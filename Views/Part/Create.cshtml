@model WorkshopManager.DTOs.PartDto

@{
    ViewData["Title"] = "Dodaj część";
}

<h2>Dodaj część</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Name" class="control-label">Nazwa części</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="UnitPrice" class="control-label">Cena jednostkowa</label>
        <input asp-for="UnitPrice" class="form-control" type="text" inputmode="decimal" placeholder="np. 123,45" pattern="[0-9]+([,\.][0-9]+)?" />
        <span asp-validation-for="UnitPrice" class="text-danger"></span>
        <small class="form-text text-muted">Wprowadź kwotę używając przecinka dla części dziesiętnych (np. 123,45)</small>
    </div>

    <button type="submit" class="btn btn-primary">Dodaj</button>
    <a asp-action="Index" class="btn btn-secondary">Anuluj</a>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
